<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/QRCodeWhiteColor"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.brown.ecard.MainActivity">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/textInputLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="63dp"
                    android:drawableLeft="@drawable/man"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="First Name"
                    android:textColor="@color/colorAccent"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@+id/textInputLayout"
                android:layout_alignStart="@+id/textInputLayout">

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/textInputLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="63dp"
                    android:drawableLeft="@drawable/man"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Last Name"
                    android:textColor="@color/colorAccent"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textInputLayout2"
                android:layout_below="@+id/textInputLayout2"
                android:weightSum="1">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/textInputLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="63dp"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Email"
                    android:textColor="@color/colorAccent"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textInputLayout3"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="63dp"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Password"
                    android:textColor="@color/colorAccent"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/submitprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayout4"
        android:background="@color/colorPrimary"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:text="Register"
        android:textColor="@color/QRCodeWhiteColor"
        android:onClick="sendMail"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/textInputLayout4"
        android:layout_alignStart="@+id/textInputLayout4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/submitprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:onClick="toLogin"
        android:text="Already have an account? Log in." />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="166dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
